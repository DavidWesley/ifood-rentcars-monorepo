{
  "name": "@repo/drizzle",
  "main": "./db.ts",
  "types": "./db.ts",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup db.ts schema/ --format 'esm' --target 'esnext' --keep-names --clean",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "tsx migrate.ts",
    "db:push": "drizzle-kit push:pg",
    "db:studio": "drizzle-kit studio"
  },
  "devDependencies": {
    "@repo/tsconfig": "workspace:*",
    "drizzle-kit": "^0.20.14",
    "pg": "^8.11.3",
    "tsup": "^8.3.5",
    "tsx": "^4.7.1"
  },
  "dependencies": {
    "@repo/env": "workspace:*",
    "drizzle-orm": "^0.29.5",
    "postgres": "^3.4.3"
  }
}
