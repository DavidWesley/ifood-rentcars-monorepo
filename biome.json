{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "files": {
    "ignoreUnknown": true,
    "ignore": [
      "**/.git*",
      "**/.svn",
      "**/.hg",
      "**/node_modules",
      "*.md",
      "**/*.json",
      "**/*config*",
      "**/test",
      "package-lock.json"
    ]
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noStaticOnlyClass": "off"
      },
      "style": {
        "noNonNullAssertion": "warn"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentWidth": 4,
    "lineEnding": "lf",
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "arrowParentheses": "always",
      "lineEnding": "lf",
      "quoteStyle": "double",
      "trailingComma": "es5",
      "lineWidth": 150,
      "semicolons": "asNeeded",
      "bracketSpacing": true
    }
  },
  "json": {
    "formatter": {
      "enabled": true,
      "indentWidth": 2
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "defaultBranch": "main",
    "useIgnoreFile": true
  }
}
